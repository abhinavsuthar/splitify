<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/noti_album_art"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/noti_album_art"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3">

            <TextView
                android:id="@+id/noti_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:text="Song Name"
                android:textColor="#202020"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noti_vd_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/noti_title"
                android:paddingEnd="0dp"
                android:paddingStart="8dp"
                android:text="00:00/03:23" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/noti_vd_prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:tint="#202020"
            app:srcCompat="@drawable/noti_previous_track" />

        <ImageView
            android:id="@+id/noti_vd_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:tint="#202020"
            app:srcCompat="@drawable/noti_play" />

        <ImageView
            android:id="@+id/noti_vd_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:tint="#202020"
            app:srcCompat="@drawable/noti_next_track" />
    </LinearLayout>


</RelativeLayout>
